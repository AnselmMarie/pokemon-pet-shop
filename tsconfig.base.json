{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["@pokemon-pet-shop/source"],
    "baseUrl": ".",
    "paths": {
      "@features/*": ["libs/features/*"],
      "@ui/*": ["libs/ui/*"],
      "footer/Module": ["apps/web/footer/src/remote-entry.ts"],
      "header/Module": ["apps/web/header/src/remote-entry.ts"],
      "homepage/Module": ["apps/web/homepage/src/remote-entry.ts"],
      "sideCart/Module": ["apps/web/sideCart/src/remote-entry.ts"]
    }
  }
}
